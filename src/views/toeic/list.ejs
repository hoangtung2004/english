<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Danh sách đề thi TOEIC</title>
  <link rel="icon" href="/images/icon.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .toeic-card { min-height: 230px; }
    .toeic-badge { background: #e3eafc; color: #2563eb; font-size: 0.9em; border-radius: 8px; padding: 2px 10px; }
    .toeic-meta { font-size: 0.95em; color: #555; }
    .toeic-meta i { margin-right: 3px; }
  </style>
</head>
<body>
  <%- include('../partials/header') %>
<div class="container py-4">
  <h2 class="mb-4">Danh sách đề thi TOEIC</h2>
  <div class="row">
    <% tests.forEach(function(test) { %>
      <div class="col-md-4 mb-4">
        <div class="card toeic-card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= test.title %></h5>
            <div class="toeic-meta mb-2">
              <span><i class="bi bi-clock"></i> <%= Math.floor(test.duration / 60) %> phút</span>
            </div>
            <div class="mb-2">
              <%= test.parts.length %> phần thi |
              <%= test.parts.reduce((sum, p) => sum + (p.questions ? p.questions.length : 0), 0) %> câu hỏi
            </div>
            <span class="toeic-badge mb-2 d-inline-block">#TOEIC</span>
            <a href="/toeic/select?testId=<%= test._id %>" class="btn btn-outline-primary w-100 mt-2">Chi tiết</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<!-- Bootstrap icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
</html> 