<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Quản lý Đề thi TOEIC</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>
  <main class="container my-5">
    <h1 class="mb-4">Quản lý Đề thi TOEIC</h1>
    <div class="mb-3 text-end">
      <a href="/admin/toeic-tests/create" class="btn btn-success">+ Thêm đề thi</a>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th>Tên đề</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <% if (tests && tests.length > 0) { %>
            <% tests.forEach(test => { %>
              <tr>
                <td><%= test.title %></td>
                <td>
                  <a href="/admin/toeic-tests/<%= test._id %>/edit" class="btn btn-sm btn-warning">Sửa</a>
                  <form action="/admin/toeic-tests/<%= test._id %>/delete" method="post" style="display:inline" onsubmit="return confirm('Xác nhận xóa đề thi này?')">
                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="2" class="text-center">Không có đề thi nào.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html> 