<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Quản lý Bài học</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>
  <main class="container my-5">
    <h1 class="mb-4">Quản lý Bài học</h1>
    <div class="mb-3 text-end">
      <a href="/admin/lessons/create" class="btn btn-success">+ Thêm bài học</a>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th>Tiêu đề</th>
            <th>Mô tả</th>
            <th>Trình độ</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <% if (lessons && lessons.length > 0) { %>
            <% lessons.forEach(lesson => { %>
              <tr>
                <td><%= lesson.title %></td>
                <td><%= lesson.description %></td>
                <td><%= lesson.level %></td>
                <td><%= lesson.createdAt ? lesson.createdAt.toLocaleDateString('vi-VN') : '' %></td>
                <td>
                  <a href="/admin/lessons/<%= lesson._id %>/edit" class="btn btn-sm btn-warning">Sửa</a>
                  <form action="/admin/lessons/<%= lesson._id %>/delete" method="post" style="display:inline" onsubmit="return confirm('Xác nhận xóa bài học này?')">
                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="5" class="text-center">Không có bài học nào.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html> 