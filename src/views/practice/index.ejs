        // B·∫Øt ƒë·∫ßu luy·ªán t·∫≠p
        const mainBtn = document.getElementById('mainActionBtn');
        function updateMainBtn() {
            // S·ªë t·ª´ c·∫ßn √¥n s·∫Ω l·∫•y t·ª´ backend n·∫øu mu·ªën hi·ªÉn th·ªã ƒë·ªông
            mainBtn.textContent = 'B·∫Øt ƒë·∫ßu √¥n t·∫≠p';
