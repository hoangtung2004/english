    <script>
        // --- K·∫øt n·ªëi backend ---
        let reviewWords = [];
        let PRACTICE_TYPES = ['listen', 'fill', 'flashcard', 'multiple'];
        let queue = [];
        let current = null;
        let progressMap = {};
        // Th√™m √¢m thanh ƒë√∫ng/sai
        const correctAudio = new Audio('/sounds/correct.mp3');
