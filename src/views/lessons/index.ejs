<%- include('../partials/head') %>
<%- include('../partials/header') %>

    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col">
                <h1 class="display-4">Danh sách bài học</h1>
                <% if (user && user.role === 'admin') { %>
                    <a href="/lessons/create" class="btn btn-primary">Tạo bài học mới</a>
                <% } %>
            </div>
        </div>

        <div class="row">
            <% if (lessons && lessons.length > 0) { %>
                <% lessons.forEach(lesson => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><%= lesson.title %></h5>
                                <p class="card-text"><%= lesson.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-<%= lesson.level === 'beginner' ? 'success' : lesson.level === 'intermediate' ? 'warning' : 'danger' %>">
                                        <%= lesson.level === 'beginner' ? 'Cơ bản' : lesson.level === 'intermediate' ? 'Trung cấp' : 'Nâng cao' %>
                                    </span>
                                    <a href="/lessons/<%= lesson._id %>" class="btn btn-primary">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col">
                    <p class="text-center">Chưa có bài học nào.</p>
                </div>
            <% } %>
        </div>
    </div>

<%- include('../partials/footer') %> 